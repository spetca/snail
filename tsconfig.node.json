{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./out",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "electron-vite.config.ts",
    "src/main/**/*.ts",
    "src/shared/**/*.ts"
  ]
}
